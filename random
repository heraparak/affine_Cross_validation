import turtle
import random

colors = ["red", "orange", "yellow", "green", "blue", "purple"]

t = turtle.Turtle()
t.width(2)

for step in range(100):
    # Change this to use a random number.
    angle = random.randint(0, 360)

    # Change this to use a random color.
    color = random.choice(colors)

    t.color(color)
    t.right(angle)
    t.forward(30)
    t.speed(0)
